<odoo>
  <data>
     <record model="ir.ui.view" id="fastsnail.employee_form_view">
            <field name="name">Employees</field>
            <field name="model">fastsnail.employee</field>
            <field name="arch" type="xml">
              <form>
                <sheet>
                      <group>
                        <field name="idemployee"/>
                        <field name="name"/>
                        <field name="surname"/>
                        <field name="phone"/>                       
                      </group>
                  </sheet>
                </form>
              </field>
            </record>

            <record model="ir.ui.view" id="fastsnail.employee_tree_view">
            <field name="name">Employees</field>
            <field name="model">fastsnail.employee</field>
            <field name="arch" type="xml">
              <tree>
                        <field name="idemployee"/>
                        <field name="name"/>
                        <field name="surname"/>
                        <field name="phone"/> 
                </tree>
              </field>
            </record>

  </data>
</odoo>